CC       = cc
CPP      =
FC       = ftn
LD       = ftn
AR       = ar -r
CPPFLAGS =
DFLAGS   = -D__GFORTRAN -D__FFTSG -D__LIBINT -D__parallel -D__SCALAPACK -D__BLACS -D__FFTW3 -D__MAX_CONTR=3
FCFLAGS  = -fopenmp -g -O3 -ffast-math -funroll-loops -ftree-vectorize -march=native -ffree-form $(DFLAGS) -I$(GFORTRAN_INC) 
LDFLAGS  = $(FCFLAGS) -v
LIBS = /users/vondele/rosa/cp2k/libint_tools/libint_cpp_wrapper.o /users/vondele/rosa/cp2k/libint/lib/libderiv.a /users/vondele/rosa/cp2k/libint/lib/libint.a -lfftw3 -lstdc++ -Wl,--whole-archive -lpthread -Wl,--no-whole-archive

